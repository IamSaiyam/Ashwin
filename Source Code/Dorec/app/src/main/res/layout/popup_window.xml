<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/themeBlueSpinner"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Results"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:text="Row in Database 1:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="ID"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="F_Name"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="L_Name"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="DOB"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Father"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Address"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="7sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idDb1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="10000001"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/fNameDb1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="F_Name"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/lNameDb1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="L_Name"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/dobDb1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="DOB"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/fatherDb1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Father"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/cityDbName"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="City"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Similar Rows in Database 2:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="ID"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="F_Name"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="L_Name"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="DOB"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Father"
                android:padding="5dp"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Address"
                android:background="@drawable/custom_border"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="7sp" />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resultRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>